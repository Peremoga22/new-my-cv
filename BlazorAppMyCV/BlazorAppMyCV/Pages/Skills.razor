@page  "/skills"




<div class="container table-responsive-md u-datatable shadow-primary-lg p-3 mb-5 rounded m-5">
    <div class="container section-title " data-aos="fade-up">
        <h2>My Skills:</h2>
        <p>          
            I'm passionate about writing clean, maintainable code, following SOLID principles, and continuously improving development workflows through CI/CD, test automation, and DevOps practices. I enjoy working in agile teams and turning complex business needs into elegant technical solutions.
        </p>

    </div><!-- End Section Title -->

    <div class="row mx-n2">
        @foreach (var skill in skillsModelCards)
        {
          <div class="col-sm-6 col-lg-3 px-3 mb-4">
                <div class="card shadow-lg border-0 h-100 text-center p-4  img-fluid rounded-3 img-hover-zoom">
                <div class="mb-3 d-flex justify-content-center" >
                    <div style="width: 120px; height: 120px;">
                        <img src="@skill.IconSrc"
                             alt="@skill.IconAlt"
                                 class="rounded"
                             style="object-fit: cover; width: 100%; height: 100%;" />
                    </div>
                        
                 </div>
                 <h4 class="h5 fw-semibold text-dark">@skill.Title</h4>
                 <p class="text-muted small">@skill.Description</p>
             </div>
          </div>
        }                         
    </div>    
</div>
 
@code {
    private List<SkillsModel> skillsModelCards = new List<SkillsModel>();

    protected override void OnInitialized()
    {
        skillsModelCards = SkillRepository.GetSkillCards();
    }
}
